<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
       <%= @book.errors.count %>件のerrorが発生しました
       <% @book.errors.full_messages.each do |message| %>
         <%= message %>
       <% end %>
      <% end %>
      <%=form_with model:@book, local:true do |f|%>
      <h4>Title</h4>
      <%=f.text_field:title%>
      <h4>Opinion</h4>
      <%=f.text_area:body%>
      <%=f.submit "Update Book"%>
      <%= link_to "Show" ,book_path %>
       |
      <a class="back" href="/books">Back</a>
      <% end %>
    </div>
  </div>
</div>