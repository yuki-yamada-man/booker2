<div class="container">
  <div class="row">
   <%= render 'users/info',user:@user, book:@book_new%>
   <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
     <tbody>
      <tr>
        <td>
          <%=link_to user_path(@user.id) do%>
           <%=attachment_image_tag @user, :profile_image,fallback: "no.image.png",size: "40x40"%>
           <%=@user.name%>
          <%end%>
        </td>
        <td>
          <%=link_to @book.title, book_path(@book.id) %>
        </td>
        <td>
            <%=@book.body%>
        </td>
        <td>
         <% if @book.favorited_by?(current_user) %>
          <p>
          <%= link_to book_favorites_path(@book), method: :delete do %>
            ♥<%= @book.favorites.count %>いいね
          <% end %>
          </p>
          <% else %>
          <p>
          <%= link_to book_favorites_path(@book), method: :post do %>
            ♡<%= @book.favorites.count %> いいね
          <% end %>
          </p>
         <% end %>
        </td>
        <td>
          <p>コメント件数:<%= @book.book_comments.count %></p>
        </td>
        <% if @user.id == current_user.id %>
         <td><%=link_to "Edit", edit_book_path(@book.id)%></td>
         <td><%=link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？"%></td>
        <%end%>
      </tr>
     </tbody>
    </table>
    <div>
      <% @book.book_comments.each do |book_comment| %>
       <%= book_comment.user.name %>
       <%= book_comment.comment %>
       <% if @user.id == current_user.id %>
       <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？"%>
       <% end %>
      <% end %>
    </div>
    <div>
     <%= form_with(model:[@book,@book_comment] , local: true) do |f| %>
      <%= f.text_area :comment %>
      <%= f.submit'送信' %>
     <% end %>
    </div>
   </div>
  </div>
</div>