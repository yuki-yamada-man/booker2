<div class="container">
  <div class="row">
   <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
     <tbody>
      <tr>
        <td>
          <%=link_to user_path(user.id) do%>
           <%=attachment_image_tag user, :image%>
           <%=@user.name%>
          <%end%>
        </td>
        <td>
          <%=link_to @book.title, book_path(book.id) do%>
        </td>
        <td>
          <%=link_to "Edit", edit_book_path(book.id)%>
        </td>
        <td>
          <%=link_to "Destroy", book_path(book.id), method: :delete%>
        </td>
      </tr>
     </tbody>
    </table>
   </div>
  </div>
</div>