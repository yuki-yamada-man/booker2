<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>
              <%=attachment_image_tag user, :image%>
            </td>
            <td>
              <%=@user.name%>
            </td>
            <td>
              <%=link_to "Show" book_path(book.id)%>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>